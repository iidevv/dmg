{
  "components/blog/post": "<article class=\"blog\">\n    <div class=\"blog-post-header\">\n        <div class=\"blog-header\">\n            <h2 class=\"blog-title\">\n                <a href=\"{{post.url}}\">{{post.title}}</a>\n            </h2>\n            <p class=\"blog-date\">{{#if post.author}}{{lang 'blog.posted_by' name=post.author}} on {{/if}}{{post.date_published}}</p>\n        </div>\n    </div>\n    <div class=\"blog-post-figure\">\n        {{#if post.thumbnail}}\n            <figure class=\"blog-thumbnail\">\n                <a href=\"{{post.url}}\">\n                    <img class=\"lazyload\" data-sizes=\"auto\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"{{getImage post.thumbnail 'blog_size'}}\" alt=\"{{post.thumbnail.alt}}\" title=\"{{post.thumbnail.alt}}\">\n                </a>\n            </figure>\n        {{/if}}\n    </div>\n    <div class=\"blog-post-body\">\n        <div class=\"blog-post\">\n            {{#if post.body}}\n                {{{post.body}}}\n            {{else}}\n                {{{post.summary}}}\n                {{#if post.show_read_more}}\n                    &hellip; \n                    <br>\n                    <a class=\"button\" href=\"{{url}}\">read more</a>\n                {{/if}}\n            {{/if}}\n        </div>\n        {{#if show_tags}}\n            {{#if post.tags}}\n                <ul class=\"tags\">\n                    {{#each post.tags}}\n                    <li class=\"tag\">\n                        <a href=\"{{url}}\">#{{name}}</a>\n                    </li>\n                    {{/each}}\n                </ul>\n            {{/if}}\n        {{/if}}\n    </div>\n</article>\n"
}
